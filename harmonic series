#include<stdio.h>

int main() {
    int n, i;
    float sum = 0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("The series is: ");
    for (i = 1; i <= n; i++) {
        printf("1/%d ", i);
        sum += 1.0/i;
    }

    printf("\nThe sum of the series up to %d terms is: %f", n, sum);

    return 0;
}
